import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int N = sc.nextInt();
        
        int reversed = 0;
        
        while (N > 0) {
            int digit = N % 10;        // get last digit
            reversed = reversed * 10 + digit;  
            N = N / 10;               // remove last digit
        }
        
        System.out.println(reversed);
        
        sc.close();
    }
}
